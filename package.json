{
  "name": "natours",
  "version": "1.0.0",
  "description": "landing page for natours",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:sass": "sass ./sass/main.scss ./build/css/style.css -w",
    "dev-server": "live-server",
    "start": "npm-run-all --parallel dev-server watch:sass copy:css",
    "compile:sass": "sass ./sass/main.scss ./build/css/style.comp.css",
    "copy:css": "copy ./css/* ./css/**/* ./build",
    "copy:images": "copy ./img/* ./img/**/* ./build",
    "copy:index": "copy ./index.html ./build",
    "concat:css": "concat -o ./build/css/style.concat.css ./build/css/style.comp.css ./build/css/icon-font.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' ./build/css/style.concat.css -o ./build/css/style.prefix.css",
    "compress:css": "sass ./build/css/style.prefix.css ./build/css/style.css",
    "build:css": "npm-run-all copy:index compile:sass copy:css copy:images concat:css prefix:css compress:css"
  },
  "author": "Marco",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "concat": "^1.0.3",
    "copy": "^0.3.2",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "sass": "^1.93.2"
  }
}
